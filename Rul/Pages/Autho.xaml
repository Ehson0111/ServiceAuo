<Page x:Class="Rul.Pages.Autho"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Rul.Pages"
      Background="White"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Autho">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition />
            <ColumnDefinition Width="260"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Логин:"/>
            <TextBox x:Name="txtLogin"/>
            <TextBlock Text="Пароль:"/>
            <PasswordBox x:Name="txtPassword"/>

            <!-- CAPTCHA Section -->
            <StackPanel x:Name="captchaPanel" Visibility="Collapsed" Margin="0,10,0,0">
                <TextBlock Text="Введите CAPTCHA:"/>
                <!--<Image x:Name="captchaImage" Width="150" Height="50" Margin="0,5,0,5"/>-->
                <TextBlock Text="capthcaImage" x:Name="capthcaImage"/>

                <TextBox x:Name="txtCaptcha"/>
            </StackPanel>

            <TextBlock x:Name="tbTimeLeft" Width="200" Foreground="Red" Visibility="Collapsed"/>
            <StackPanel Orientation="Horizontal" Height="80" HorizontalAlignment="Center">
                <Button x:Name="btnEnterGuest" Margin="5,15,5,5" Content="Войти как гость" Click="btnEnterGuest_Click"/>
                <Button x:Name="btnEnter" Margin="5,15,5,5" Content="Войти" Click="btnEnter_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
