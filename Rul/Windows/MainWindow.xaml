<Window x:Class="Rul.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rul"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Icon="/Resources/icon.ico" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#ff76e383">
            <Button HorizontalAlignment="Right" x:Name="btnBack" Content="Выход" Click="Button_Click"/>
            <Image Width="45" Height="45" Margin="5" HorizontalAlignment="Left" Source="/Resources/logo.png" />

        </Grid>

        <Frame x:Name="FrmMain" Grid.Row="1" ContentRendered="FrmMain_ContentRendered" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
